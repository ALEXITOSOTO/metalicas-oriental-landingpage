---
import { projects } from '../../config/projects.json';
---

<h2 class="text-5xl font-bold my-8 text-center">Proyectos</h2>
<p class="text-xl my-8 text-center">Te presentamos algunos de nuestros proyectos!</p>
<hr class="border-2 border-red-500 w-1/3 m-auto mb-8" />
{
    projects.map((project)=> (
        <div class="flex flex-col mb-2 text-center md:text-left md:flex-row pt-10">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="my-2 text-justify">{project.description}</p>
                <button class="bg-red-500 px-3 py-2 hover:bg-red-800 rounded-xl">{project.ubicacion}</button>
            </div>
            <div class="flex-1">
                <img src={project.image} alt="" class="w-72 m-auto rounded-3xl p-1 bg-gradient-to-r from-slate-500 via-white-500 to-red-600 transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:rotate-1" />
            </div>
        </div>
    ))
}
